<% if target.errors.any? %>
    <div class="alert alert-danger" role="alert">
        <strong>
            <%= "#{pluralize(target.errors.count, "error")} prohibited this from being saved:" %>
        </strong>
        <ul>
            <% target.errors.full_messages.each do |msg| %>
                <li>
                    <%= msg %>
                </li>
            <% end %>
        </ul>
    </div>
<% end %>