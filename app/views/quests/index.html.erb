<div class="row">
  <h1>Daily Quests</h1>
</div>

<div class="row">
  <%= link_to 'Embark on a New Quest!', new_quest_path, class: 'btn btn-success' %>
</div>

<div class="row">
  <table class="table">
    <thead>
      <th>Description</th>
      <th>Goal</th>
      <th>Reward</th>
      <th>Current Chain</th>
    </thead>
    <tbody>
    <tr>
      <% @quests.each do |quest| %>
          <td><%= link_to quest.description, edit_quest_path(quest.id) %></td>
          <td><%= quest.goal %></td>
          <td><%= quest.reward %></td>
          <td><%= quest.chain %></td>
      <% end %>
    </tr>
    </tbody>
  </table>
</div>
